@model WorkoutApp.DataTransferObjects.Requests.CreateNewWorkoutRequest

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<h4> Yeni bir egzersiz oluştur</h4>

<div class="row md-4">
    <div class="col-md-4 text-white-50">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> </label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-white-50">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-white-50">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option hidden="" value="" disabled selected>Lütfen kategori seçin</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group text-white-50">
                <label asp-for="ImgUrl" class="control-label">   </label>
                <input asp-for="ImgUrl" class="form-control"/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group text-white-50" style="margin-top: 10px;">
               <input type="submit" value="Ekle" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>