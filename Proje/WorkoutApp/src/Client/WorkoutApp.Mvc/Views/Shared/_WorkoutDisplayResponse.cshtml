@model WorkoutApp.DataTransferObjects.Responses.WorkoutDisplayResponse

<style>
    .image-container {
        height: 200px;
        overflow: hidden;
    }

    .image-container img {
        width: 100%;
        height: 100%;
    } 
</style>

<div class="card text-white bg-dark" style="width: 18rem; border: 1px solid white;">
    <div class="image-container">
        <img src="@Model.ImgUrl" class="card-img-top" alt="...">
    </div>
    <div class="card-body" style="font-family: 'Trebuchet MS'">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <div class="card-body">
        <button class="btn btn-primary plan" data-id="@Model.Id" style="width: 100%">Ekle</button>
    </div>
</div>
